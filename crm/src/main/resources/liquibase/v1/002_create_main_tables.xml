<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="0" author="rodi">
        <createTable tableName="medical_procedure" schemaName="tme">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="business_id" type="uuid"/>

            <column name="type" type="varchar(255)"/>
            <column name="price" type="bigint"/>
            <column name="scheduled_date" type="datetime"/>
        </createTable>
    </changeSet>

    <changeSet id="1" author="rodi">
        <createTable tableName="medical_licence" schemaName="tme">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="business_id" type="uuid"/>

            <column name="value" type="varchar(999)"/>
            <column name="issuer" type="varchar(999)"/>
            <column name="expires" type="datetime"/>
            <column name="issued" type="datetime"/>

            <column name="address_id" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="rodi">
        <createTable tableName="doctor" schemaName="tme">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="business_id" type="uuid"/>

            <column name="license_id" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="rodi">
        <createTable tableName="patient" schemaName="tme">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="business_id" type="uuid"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
